

@{
    ViewData["Title"] = "Index";
}

<h3>Plano Conta</h3>



<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th>Tipo</th>
            <th></th>
            <th></th>
        </tr>
    </thead>


    @{
        foreach (var item in (List<PlanoContaModel>)ViewBag.ListaPlanoConta)
        {
            <tbody>
                <tr>
                    <td style="width:10%">@item.Id</td>
                    <td style="width:50%">@item.Descricao</td>
                    <td style="width:20%">@item.Tipo.Replace("R","Receita").Replace("D","Despesas")</td>
                    <td style="width:10%" class="text-center">
                        <button type="submit" style="color:white; border-color:transparent;background-color:transparent" onclick="Editar(@item.Id)">
                            <i class="far fa-edit" style="color:royalblue; height:20px;width:20px"></i>
                        </button>
                    </td>
                    <td class="text-center">
                        <button type="submit" style="color:white; border-color:transparent; border-style:solid;background-color:transparent" onclick="Excluir(@item.Id)">
                            <i class="fas fa-times" style="color:red; height:20px;width:20px"></i>
                        </button>
                    </td>
                </tr>

            </tbody>
        }
    }
</table>
<button type="button" class="btn btn-primary btn-block" onclick="criarPlanoConta()">Criar Plano Conta</button>

<script>

    function criarPlanoConta() {


        window.location.href = "../PlanoConta/CriarPlanoConta";

    }

    function Excluir(id_conta) {

        window.location.href = "../PlanoConta/ExcluirPlanoConta/" + id_conta;

    }

      function Editar(id_conta) {

        window.location.href = "../PlanoConta/CriarPlanoConta/" + id_conta;

    }


</script>
